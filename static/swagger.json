{
    "openapi": "3.0.3",
    "info": {
      "title": "Resumo de Alunos - OpenAPI 3.0"
      
      },
      "basePath": "/",
      "paths": {
        "/": {
            "get": {
                "summary": "Retornar todos os resumos de alunos cadastrados",
                "description": "Retorna todos os alunos cadastrados e seus resumos.",
                "tags": ["Alunos"],
                
                "responses": {
                    "200": {
                        "description": "ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "nome": {
                                            "type": "string"
                                        },
                                        "idade": {
                                            "type": "number"
                                        },
                                        "nota_1_semestre": {
                                            "type": "number"
                                        },
                                        "nota_2_semestre": {
                                            "type": "number"
                                        },
                                        "nome_professor": {
                                            "type": "string"
                                        },
                                        "numero_da_sala": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
                
            }
        },

