                                    "idade": 36,
                                    "nota_1_semestre": 9.5,
                                    "nota_2_semestre": 8.6,
                                    "nome_professor": "Marcos",
                                    "numero_da_sala": 6
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "404": {
                        "description": "Não consegui criar o resumo do aluno."
