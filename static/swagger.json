        "/aluno": {
            "post": {
                "summary": "Cadastra um novo resumo de aluno",
                "description": "Cria um resumo de aluno com seus atributos sendo: nome, idade, nota 1 semestre, nota 2 semestre, nome do professor e número da sala",
                "tags": ["Alunos"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string"
                                    },
                                    "idade": {
                                        "type": "number"
                                    },
                                    "nota_1_semestre": {
                                        "type": "number"
                                    },
                                    "nota_2_semestre": {
                                        "type": "number"
                                    },
