                "summary": "Retornar um resumo de aluno passando um ID",
                "description": "Retorna o resumo de um aluno por id.",
                "tags": ["Alunos"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "type": "integer",
                        "required": true,
                        "description": "Usar o id do aluno para buscar."
                    }
                ],
                "responses": {
                    "404": {
                        "description": "Resumo de aluno não encontrado."
                    },
                    "200": {
                        "description": "ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "nome": {
                                            "type": "string"
                                        },
                                        "idade": {
                                            "type": "number"
                                        },
                                        "nota_1_semestre": {
                                            "type": "number"
                                        },
                                        "nota_2_semestre": {
                                            "type": "number"
                                        },
                                        "nome_professor": {
                                            "type": "string"
                                        },
                                        "numero_da_sala": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
                
            },
            "put": {
                "summary": "Atualiza o resumo de um aluno passado no ID",
                "description": "Atualiza o resumo de um aluno por id.",
                "tags": ["Alunos"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "type": "integer",
                        "required": true,
                        "description": "Usar o id do aluno para atualizar as informações."
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nome": {
                                        "type": "string"
                                    },
                                    "idade": {
                                        "type": "number"
                                    },
                                    "nota_1_semestre": {
                                        "type": "number"
                                    },
                                    "nota_2_semestre": {
                                        "type": "number"
                                    },
                                    "nome_professor": {
                                        "type": "string"
                                    },
                                    "numero_da_sala": {
                                        "type": "number"
                                    }
                                },
                                "example": {
                                    "nome": "Fernanda Roberta",
                                    "idade": 56,
                                    "nota_1_semestre": 7.5,
                                    "nota_2_semestre": 5.6,
                                    "nome_professor": "Marcos",
                                    "numero_da_sala": 2
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "nome": {
                                            "type": "string"
                                        },
                                        "idade": {
                                            "type": "number"
                                        },
                                        "nota_1_semestre": {
                                            "type": "number"
                                        },
                                        "nota_2_semestre": {
                                            "type": "number"
                                        },
                                        "nome_professor": {
                                            "type": "string"
                                        },
                                        "numero_da_sala": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Apaga um resumo de aluno",
                "description": "ATENÇÃO! Apaga um resumo de aluno com todos os seus atributos!",
                "tags": ["Alunos"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "type": "integer",
                        "required": true,
                        "description": "Usar o id do aluno para buscar."
